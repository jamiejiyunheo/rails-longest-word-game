<h1>Welcome to the longest word game!</h1>

<div>
  <ul id="grid">
    <% @letters.each do |letter| %>
    <div class="mx-2"><li><%= letter %></li></div>
    <% end %>
  </ul>
</div>
<p>What is the longest word you can find?</p>
<form action="/score" method="post" data-turbo="false" id="form">
  <input type="text" name="words">
  <input type="submit" value="Play" id="button">
  <%= hidden_field_tag :letters, @letters.join %>
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
</form>
